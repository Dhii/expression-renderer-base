{
    "name": "dhii/expression-renderer-base",
    "description": "Base functionality for expression renderers.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Dhii Team",
            "email": "development@dhii.co"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^5.4 | ^7.0",
        "dhii/expression-renderer-abstract": "dev-task/initial-classes",
        "dhii/data-container-interface": "^0.2-alpha1",
        "dhii/data-container-abstract": "^0.1-alpha1",
        "dhii/data-container-base": "^0.1-alpha1",
        "dhii/container-helper-base": "^0.1-alpha5",
        "dhii/output-renderer-base": "^0.1",
        "dhii/iterator-helper-base": "^0.1-alpha2",
        "dhii/normalization-helper-base": "^0.1-alpha2",
        "dhii/i18n-helper-base": "^0.1-alpha1"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.8",
        "ptrofimov/xpmock": "^1.1",
        "dhii/php-cs-fixer-config": "^0.1",
        "codeclimate/php-test-reporter": "<=0.3.2",
        "dhii/stringable-interface": "^0.1"
    },
    "autoload": {
        "psr-4": {
            "Dhii\\Expression\\Renderer\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Dhii\\Expression\\Renderer\\FuncTest\\": "test/functional",
            "Dhii\\Expression\\Renderer\\UnitTest\\": "test/unit"
        }
    },
    "scripts": {
        "test": "phpunit",
        "csfix": "php-cs-fixer fix -vvv"
    }
}
